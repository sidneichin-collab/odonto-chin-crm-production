import nodemailer from "nodemailer";
import { getDb } from "./db";
import { emailConfigs } from "../drizzle/schema";
import { eq } from "drizzle-orm";

interface EmailConfig {
  host: string;
  port: number;
  secure: boolean;
  user: string;
  password: string;
  fromName: string;
  fromEmail: string;
}

/**
 * Get email configuration for a clinic
 */
async function getEmailConfig(clinicName: string): Promise<EmailConfig | null> {
  const db = await getDb();
  if (!db) return null;

  const result = await db
    .select()
    .from(emailConfigs)
    .where(eq(emailConfigs.clinicName, clinicName))
    .limit(1);

  if (result.length === 0) return null;

  const config = result[0];
  return {
    host: config.smtpHost,
    port: config.smtpPort,
    secure: false, // Will be true if port is 465
    user: config.smtpUser,
    password: config.smtpPassword,
    fromName: config.clinicName,
    fromEmail: config.emailAddress,
  };
}

/**
 * Send email using clinic's SMTP configuration
 */
export async function sendEmail(
  clinicId: string,
  to: string,
  subject: string,
  htmlContent: string,
  textContent?: string
): Promise<{ success: boolean; error?: string }> {
  try {
    const config = await getEmailConfig(clinicId);

    if (!config) {
      return {
        success: false,
        error: "Configura√ß√£o de email n√£o encontrada para esta cl√≠nica",
      };
    }

    // Create transporter
    const transporter = nodemailer.createTransport({
      host: config.host,
      port: config.port,
      secure: config.secure,
      auth: {
        user: config.user,
        pass: config.password,
      },
    });

    // Send email
    await transporter.sendMail({
      from: `"${config.fromName}" <${config.fromEmail}>`,
      to,
      subject,
      text: textContent || htmlContent.replace(/<[^>]*>/g, ""), // Strip HTML if no text provided
      html: htmlContent,
    });

    console.log(`[Email] Sent to ${to} for clinic ${clinicId}`);

    return { success: true };
  } catch (error) {
    console.error(`[Email] Error sending email:`, error);
    return {
      success: false,
      error: error instanceof Error ? error.message : "Erro ao enviar email",
    };
  }
}

