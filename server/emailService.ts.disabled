    if (!config) {
      return {
        success: false,
        error: "Configura√ß√£o de email n√£o encontrada",
      };
    }

    const transporter = nodemailer.createTransport({
      host: config.host,
      port: config.port,
      secure: config.secure,
      auth: {
        user: config.user,
        pass: config.password,
      },
    });

    // Verify connection
    await transporter.verify();

    console.log(`[Email] Configuration test successful for clinic ${clinicId}`);

    return { success: true };
  } catch (error) {
    console.error(`[Email] Configuration test failed:`, error);
    return {
      success: false,
      error: error instanceof Error ? error.message : "Erro ao testar configura√ß√£o",
    };
  }
}
