/**
 * Send reminder email with persuasion level (for multi-channel escalation)
 */
export async function sendReminderEmail(params: {
  clinicId: string;
  to: string;
  patientName: string;
  appointmentDate: Date;
  appointmentType: string;
  messageContent: string;
  persuasionLevel: "normal" | "medium" | "high" | "urgent" | "very_urgent";
}): Promise<{ success: boolean; messageId?: string; error?: string }> {
  try {
    const config = await getEmailConfig(params.clinicId);

    if (!config) {
      return {
        success: false,
        error: "Configura√ß√£o de email n√£o encontrada para esta cl√≠nica",
      };
    }

    const subject = getEmailSubject(params.persuasionLevel, params.appointmentType);
    const htmlContent = generateEscalationEmailHTML(params, config.fromName);

    // Create transporter
    const transporter = nodemailer.createTransport({
      host: config.host,
      port: config.port,
      secure: config.secure,
      auth: {
        user: config.user,
        pass: config.password,
      },
    });

    // Send email
    const info = await transporter.sendMail({
      from: `"${config.fromName}" <${config.fromEmail}>`,
      to: params.to,
      subject: subject,
      text: params.messageContent,
      html: htmlContent,
    });

    console.log(`[Email] Reminder sent to ${params.to} with persuasion level ${params.persuasionLevel}`);

    return {
      success: true,
      messageId: info.messageId,
    };
  } catch (error) {
    console.error(`[Email] Error sending reminder email:`, error);
    return {
      success: false,
      error: error instanceof Error ? error.message : "Erro ao enviar email",
    };
  }
}

/**
 * Generate email subject based on persuasion level
 */
function getEmailSubject(
  level: "normal" | "medium" | "high" | "urgent" | "very_urgent",
  appointmentType: string
): string {
  const typeLabel =
    appointmentType === "orthodontic_treatment"
      ? "Mantenimiento Ortod√≥ntico"
      : "Consulta";

  switch (level) {
    case "normal":
      return `Recordatorio: ${typeLabel} Pr√≥ximo`;
    case "medium":
      return `‚è∞ Recordatorio Importante: ${typeLabel}`;
    case "high":
      return `‚ö†Ô∏è Confirmaci√≥n Necesaria: ${typeLabel}`;
    case "urgent":
      return `üîî URGENTE: Confirme su ${typeLabel}`;
    case "very_urgent":
      return `üö® √öLTIMA OPORTUNIDAD: Confirme su ${typeLabel}`;
    default:
      return `Recordatorio: ${typeLabel}`;
  }
}

